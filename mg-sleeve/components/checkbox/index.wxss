/* components/checkbox/index.wxss */
.container {
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: center;
    box-sizing: border-box;
    width: 40rpx;
    height: 40rpx;
}

.bg-checked {
    background-color: #157658;
}

.bg-unchecked {
    border: 2rpx solid #157658;
    background-color: #dcebe6;
}

/*用于控制 icon*/
.sleeve {
    color: #ffffff !important;
    font-family: sleeve !important;
    font-size: 7rpx;
    font-style: normal;
    line-height: 28rpx;
}
