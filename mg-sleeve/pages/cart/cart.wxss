page {
    background-color: #f3f4f6;
}

.container {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
    min-height: 300rpx;
    background-color: #ffffff;
}

.total-container {
    position: fixed;
    z-index: 99;
    bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    height: 88rpx;
    padding-left: 30rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0 0 4px 0 rgba(210, 210, 210, 0.5);
}

.data-container {
    display: flex;
    align-items: center;
    flex: 1 1 auto;
    flex-direction: row;
    justify-content: space-between;
}

.checkbox-container {
    display: flex;
    align-items: center;
    flex-direction: row;
}

.checkbox-container > text {
    margin-left: 30rpx;
    color: #333333;
    font-size: 24rpx;
}

.price-container {
    display: flex;
    align-items: center;
    flex-direction: row;
}

.price-container > text {
    margin-right: 24rpx;
    color: #333333;
    font-size: 28rpx;
}

.settlement-btn {
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: center;
    width: 200rpx;
    height: 100%;
    margin-left: 24rpx;
    color: #ffffff;
    background-color: #157658;
    font-size: 28rpx;
}

.settlement-btn > text {
    overflow: hidden;
    /*width: 90%;*/
    max-width: 190rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    /*display: -webkit-box;*/
    /*width: 180rpx;*/
    /*-webkit-box-orient: vertical;*/
    /*-webkit-line-clamp: 1;*/
    /*overflow: hidden;*/
}

.status-btn {
    border-radius: 1rpx !important;
    background-color: #157658 !important;
}

.disabled {
    opacity: 0.5;
}

.empty-container {
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: center;
    width: 100%;
    height: 800rpx;
    background-color: #f3f4f6;
}

.for-you-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
}

.title {
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: center;
    height: 100rpx;
    margin-top: 10rpx;
    color: #333333;
    background-color: #ffffff;
    font-size: 24rpx;
}

.for-you-spu {
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-top: 10rpx;
    padding-top: 30rpx;
    background-color: #ffffff;
}

.logo-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: 100%;
    margin-top: 50rpx;
    margin-bottom: 80rpx;
}

.logo {
    width: 200rpx;
    height: 72rpx;
}
